{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "plugins": [
      { "transform": "transformer-query/lib/transform" }
    ]
  },
  "exclude": [
    "./test/**/*.ts",
    "./**/*.d.ts"
  ]
}